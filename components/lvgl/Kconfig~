menu "LVGL Driver Settings"

choice SHARED_SPI_HOST
	prompt "Host"
	default HSPI_HOST
	help
	    The ESP32 has 3 spi buses - spi, vspi, and hspi. We are left with vspi and hspi for connecting with external sensors.  

	config HSPI_HOST
	bool "HSPI"

	config VSPI_HOST
	bool "VSPI"

endchoice

menu "Shared SPI settings"
	depends on SHARED_SPI_HOST

config SHARED_SPI_USE_DMA
	bool "Use DMA for SPI Transactions?"

config SHARED_SPI_MISO
	int "Shared MISO Pin"
	default 19
	range 0 39

config SHARED_SPI_MOSI
	int "Shared MOSI Pin"
	default 23
	range 0 39

config SHARED_SPI_SCK
	int "Shared SCK Pin"
	default 18
	range 0 39

config SHARED_SPI_TRANS_SIZE
	int "Shared spi transfer size"
	default 4094

endmenu

menu "ILI9341 Settings"
depends on SHARED_SPI_HOST

config ILI9341_CS
	int "ILI9341 CS Pin"
	default 26
	range 0 39

config ILI9341_DC
	int "ILI9341 DC Pin"
	default 27
	range 0 39

config ILI9341_BCKL
	int "ILI9341 Backlight Pin"
	default -1
	range -1 39

config ILI9341_RESET
	int "ILI9341 Reset Pin"
	default 14
	range 0 39

endmenu

menu "XPT2046 Settings"

config XPT2046_CS
	int "XPT2046 CS Pin"
	default 12
	range 0 39

config XPT2046_IRQ
	int "XPT2046 IRQ Pin"
	default 13 
	range 0 39

endmenu

endmenu


