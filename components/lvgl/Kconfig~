menu "ILI9341 Settings"

config ILI9341_CS
	int "ILI9341 CS Pin"
	default 26
	range 0 39

config ILI9341_DC
	int "ILI9341 DC Pin"
	default 27
	range 0 39

config ILI9341_BCKL
	int "ILI9341 Backlight Pin"
	default -1
	range -1 39

config ILI9341_RESET
	int "ILI9341 Reset Pin"
	default 14
	range 0 39

endmenu

